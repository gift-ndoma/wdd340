<% if (title) { %>
  <h1>Error: <%= title %></h1>
<% } else { %>
  <h1>Server Error</h1>
<% } %>

<div class="error-container">
  <p class="error-message">
    <% if (message) { %>
      <%= message %>
    <% } else { %>
      An unexpected error occurred. Please try again later.
    <% } %>
  </p>
  
  <p class="error-help">
    <a href="/">Return to Home</a>
  </p>
</div>
