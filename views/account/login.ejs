<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <%  }) %>
  </ul>
<% } %>

<div class="login-container">
  <form id="loginForm" action="/account/login" method="post">
    <div class="form-group">
      <label for="account_email">Email Address:</label>
      <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">
    </div>
    
    <div class="form-group">
      <span class="password-requirements">
        Password must meet the same rules as registration.
      </span>
      <label for="account_password">Password:</label>
      <input
        type="password"
        id="account_password"
        name="account_password"
        required
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    </div>
    
    <div class="form-group">
      <button type="submit">Login</button>
    </div>
  </form>
  
  <div class="register-link">
    <p>Don't have an account? <a href="/account/register">Sign up here</a></p>
  </div>
</div>