<% if (title) { %>
  <h1><%= title %></h1>
<% } else { 
  res.locals.title = "Account Management" 
} %>

<!-- Display flash message if present -->
<%- messages() %>

<!-- Display errors if present -->
<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="account-management">
  <!-- Personalized Greeting -->
  <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  
  <!-- Update Account Link - visible to all account types -->
  <p>
    <a href="/account/update/<%= locals.accountData.account_id %>" title="Click to update account information">Update Account Information</a>
  </p>
  
  <!-- Inventory Management Section - only for Employee or Admin -->
  <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p>
      <a href="/inv/" title="Click to manage inventory">Manage Inventory</a>
    </p>
  <% } %>
</div>